<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.mobdev.whereami.MainActivity">

    <Button
        android:id="@+id/btnWhereami"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where Am I?"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="whereAmI"/>

    <TextView
        android:id="@+id/txtCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinates"
        android:textSize="18sp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/txtAddress"
        android:layout_alignStart="@+id/txtAddress" />
    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Address"
        android:textSize="18sp"
        android:layout_below="@+id/btnWhereami"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginEnd="31dp" />

    <Button
        android:id="@+id/btnLastPos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:text="last Position"
        />


</RelativeLayout>
